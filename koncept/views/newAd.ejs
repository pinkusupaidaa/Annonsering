<form method="post" action="/users/newAd" enctype="multipart/form-data">
    <div class="form-group">
        <label>Stad</label>
        <select type="text" class="form-control" name="city" placeholder="Stad" >
            <%for(i = 0; i < cities.cities.length; i++){%>
            <option><%= cities.cities[i]%></option>
            <%}%>
        </select>
    </div>
    <div class="">
    <label for="sel1">Kategori</label>
    <select required class="form-control" name="category" title="Välj Kategori" id="sel1">
        <option>Bil & Motor</option>
        <option>Catering</option>
        <option>Data</option>
        <option>Ekonomi</option>
        <option>Flytt & Transport</option>
        <option>Hantverkare</option>
        <option>Hundvakt & Djurskötsel</option>
        <option>Kosmetik & Hudvård</option>
        <option>Musik & Underhållning</option>
        <option>Städning</option>
        <option>Trädgård & Markarbeten</option>
        <option>Undervisning</option>
    </select>
    </div>
    <!--<div class="form-group">
        <label>Kategori</label>
        <input type="text" class="form-control" name="category" placeholder="Kategori">
    </div>-->
    <div class="form-group">
        <label>Beskrivning</label>
    <textarea class="form-control" name="description" placeholder="Beskriv annonsen här"></textarea>
    </div>
    <div class="form-group">
        <label>Lägg till bild</label>
        <input class="form-control" type="file" name="image1">
    </div>
    <div id="image2" class="form-group" style="display: none">
        <label>Lägg till bild</label>
        <input class="form-control" type="file" name="image2">
    </div>
    <div id="image3" class="form-group" style="display: none">
        <label>Lägg till bild</label>
        <input class="form-control" type="file" name="image3">
    </div>

    <button type="submit" class="btn btn-default">Publicera annonsen</button>
</form>
<button id="newImage"><span class="glyphicon glyphicon-plus"></span></button><br>

