<h1><%=oneAdd.city%></h1>
<h3><%= oneAdd.description%></h3>
<h4><%= oneAdd.category%></h4>
<%if(oneAdd.images.length > 0){%>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
    <%for(i = 0; i < oneAdd.images.length; i++){%>
        <%if(i == 0){%>
        <li data-target="#myCarousel" data-slide-to="<%=i%>" class="active"></li>
        <%}else{%>
        <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
        <%}%>
    <%}%>

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <%for(i = 0; i < oneAdd.images.length; i++){%>
            <%if(i == 0){%>
            <div class="item active">
                <img src="/images/<%=oneAdd.images[i]%>" alt="Ad<%=i%>">
            </div>
            <%}else{%>
            <div class="item">
                <img src="/images/<%=oneAdd.images[i]%>" alt="Ad<%=i%>">
            </div>
            <%}%>
        <%}%>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<%}%>
<!--<img name="slide" class="img-responsive center-block" src="" alt="Annonsbild">-->

<%if(oneAdd.userId == user._id){%>
<a href="/users/allAdds/singleAdd/edit/<%=oneAdd._id%>" class="btn btn-default">Redigera Annons</a>
<a class="btn btn-danger delete-ad" href="#" data-id="<%=oneAdd._id%>">Delete</a>
<%}%>

